{
    "name": "jmf/twig-time",
    "description" : "Twig extension for handling date and time in Twig templates.",
    "license": "mit",
    "type": "library",
    "require": {
        "php": ">=8.3",
        "twig/twig": "^3.0"
    },
    "suggest": {
        "ext-intl": "Required for localized date and time formatting."
    },
    "require-dev": {
        "phing/phing": "^2.17",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.1",
        "rector/rector": "^1.0",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Jmf\\Twig\\Extension\\Time\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jmf\\Twig\\Extension\\Time\\": "tests/unit/src"
        }
    }
}
